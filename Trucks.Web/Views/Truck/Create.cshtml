@model Trucks.Crosscutting.ViewModels.TruckViewModel

@{
    ViewData["Title"] = "Create";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header"><strong>Create Truck</strong></div>
            <div class="card-body col-md-4">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-row">
                        <div class="mb-3">
                            <label asp-for="Name" class="control-label"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Color" class="control-label"></label>
                            <input asp-for="Color" class="form-control" />
                            <span asp-validation-for="Color" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="IdTruckModel" class="control-label"></label>
                            <select asp-for="IdTruckModel" class="form-control" asp-items="ViewBag.TruckModel"></select>
                            <span asp-validation-for="IdTruckModel" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="ManufactureYear" class="control-label"></label>
                            <select asp-for="ManufactureYear" class="form-control" asp-items="ViewBag.ManufactureYear"></select>
                            <span asp-validation-for="ManufactureYear" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="ModelYear" class="control-label"></label>
                            <select asp-for="ModelYear" class="form-control" asp-items="ViewBag.ModelYear"></select>
                            <span asp-validation-for="ModelYear" class="text-danger"></span>
                        </div>

                    </div>
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <a class="btn btn-light" asp-action="Index">Back</a>
                        </div>
                        <div class="col-md-4 mb-3">
                            <input type="submit" value="Create" class="btn btn-primary" />
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
@{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
