@model Trucks.Crosscutting.ViewModels.TruckViewModel

@{
    ViewData["Title"] = "Edit";
}

<style>
    .form-group {
        padding-bottom: 10px;
    }
</style>


<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="card">
                <div class="card-header"><h4>Edit Truck</h4></div>
                <div class="card-body col-md-4">
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Color" class="control-label"></label>
                        <input asp-for="Color" class="form-control" />
                        <span asp-validation-for="Color" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="IdTruckModel" class="control-label"></label>
                        <select asp-for="IdTruckModel" class="form-control" asp-items="ViewBag.TruckModel"></select>
                    </div>
                    <div class="form-group">
                        <label asp-for="ManufactureYear" class="control-label"></label>
                        <select asp-for="ManufactureYear" class="form-control" asp-items="ViewBag.ManufactureYear"></select>
                        <span asp-validation-for="ManufactureYear" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ModelYear" class="control-label"></label>
                        <select asp-for="ModelYear" class="form-control" asp-items="ViewBag.ModelYear"></select>
                        <span asp-validation-for="ModelYear" class="text-danger"></span>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="row col-md-6">
                        <div class="col-md-3">
                            <button type="submit" class="btn btn-outline-primary"><i class="fa-solid fa-floppy-disk"></i> Save</button>
                        </div>
                        <div class="col-md-3">
                            <a class="btn btn-outline-secondary" asp-controller="Truck" asp-action="Index"><i class="fa-solid fa-arrow-left"></i> Back</a>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
@{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
